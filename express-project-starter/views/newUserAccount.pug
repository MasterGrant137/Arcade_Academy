extends layout.pug

include utils.pug

block content
  h2 New Arcade Academy Account
  +validationErrors(errors)
  form(action="/users/register" method="post" class="sign-up-form")
      h4#sign-up-title Sign Up
      input(name="_csrf" type="hidden" value=csrfToken)
      .sign-up-inputs
        label(class="sign-up-labels") Full Name
        input(name="fullName" value=fullName placeholder="Duke Nukem" required)
        label(class="sign-up-labels") Email
        input(name="email"  value=email type="email" placeholder="Dukel@gonuclear.com" required)
        label(class="sign-up-labels") Password
        input(name="password"  type="password" placeholder="Password" required)
        label(class="sign-up-labels") Confirm Password
        input(name="confirmPassword"  type="password" placeholder="Confirm Password" required)
        label(class="sign-up-labels") Screen Name
        input(name="screenName"  value=screenName placeholder="TheDukinator" required)
      div Profile Picture
        img#avatar-img(src="https://cdn.iconscout.com/icon/premium/png-256-thumb/airplane-2475078-2062395.png", alt="")
      select(name="iconSelector") Pick Your Avatar
        option(data-img_src="https://cdn.iconscout.com/icon/premium/png-256-thumb/airplane-2475078-2062395.png" selected)
          img(src="https://cdn.iconscout.com/icon/premium/png-256-thumb/airplane-2475078-2062395.png", alt="")
        option(style="background-image:url(https://findicons.com/files/icons/1019/sport/256/soccer_ball.png)")
          img(src="https://cdn.iconscout.com/icon/premium/png-256-thumb/airplane-2475078-2062395.png", alt="")
        option(value="")
          img(src="https://cdn.iconscout.com/icon/premium/png-256-thumb/airplane-2475078-2062395.png", alt="")
        option(value="")
          img(src="https://cdn.iconscout.com/icon/premium/png-256-thumb/airplane-2475078-2062395.png", alt="")
        option(value="")
          img(src="https://cdn.iconscout.com/icon/premium/png-256-thumb/airplane-2475078-2062395.png", alt="")
        //- each genre in genres
        //- This is where we would implement genres in either the form of a checkbox or a regular element with addEventListeners
      button#sign-up-button Submit

