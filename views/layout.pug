        script(src="/javascripts/index.js" type="module")
  body
    header
      div#page-header
        a(href="/" class="title-anchor")
          h1#page-title Arcade Academy
      div#page-header-right
        if locals.authenticated
          a(href=`/users/${user.id}/userProfile` id="anchor-profile-card") 
            .profile-card-og
              .profile-card-img 
                img(src=user.profileImage, alt="")
              .profile-card-name  
                h5 #{user.screenName} 
                
              .profile-logout-btn
                  h5 Online  
                  form(action='/users/logout' method='post')
                      button(type='submit')
        else
          .auth-buttons
            .both-buttons
              a(href="/users/login" class="login-anchors") Log In
              p.login-anchors.no-padding |
              a(href="/users/register" class="login-anchors") Sign Up
            .demo-user-btn
              form(action="/users/demoUser" method="POST")
                button

    nav
      ul
        a(href="/games/topGames" class="nav-bar-button")
          li.x <span class="dot">‚Ä¢</span> Top 10 <span class="dot">‚Ä¢</span>
        a(href="/games/categories" class="nav-bar-button")
          li.x <span class="dot">‚Ä¢</span> Categories <span class="dot">‚Ä¢</span>
        a(href="/games" class="nav-bar-button")
          li.x <span class="dot">‚Ä¢</span> All Games <span class="dot">‚Ä¢</span>
        if locals.authenticated
          a(href=`/users/${user.id}/userProfile` class="nav-bar-button nav-user-profile-button")
            li.x <span class="dot">‚Ä¢</span> My Profile <span class="dot">‚Ä¢</span>
          li.x <span class="nav-bar-button" id="search-icon">üßê</span>

