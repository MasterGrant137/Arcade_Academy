doctype html
html
  head
      block head
        title #{title}
        <link href="https://fonts.googleapis.com/css2?family=Abel&family=Teko:wght@300&family=Varela+Round&display=swap" rel="stylesheet">
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Azeret+Mono:wght@100&display=swap" rel="stylesheet">
        link(rel='stylesheet' href='/stylesheets/main.css')
        link(rel="stylesheet", href="/stylesheets/form-style.css")
        link(rel="stylesheet" href="/stylesheets/game-style.css")
        link(rel="stylesheet" href="/stylesheets/user-profile.css")
